<h1>Transactions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Comment</th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.amount %></td>
        <td><%= transaction.comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_user_transaction_path(user_id: @user.id) %>
<%= link_to 'Back', users_path %>
